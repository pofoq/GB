@model IAsyncEnumerable<string>

@{
    ViewData["Title"] = "File Text";
}

<div>
    <form method="post">
        <label for="filePath"> File Path: </label><br />
        <input id="filePath" type="text" name="filePath" style="width: 1000px;" /><br />
        <input type="submit" name="submit" value="Read" />
    </form>
</div>

<div>
    @if (Model != null)
    {
        @await foreach (var line in Model)
        {
            @line<br />
        }

    }
</div>
